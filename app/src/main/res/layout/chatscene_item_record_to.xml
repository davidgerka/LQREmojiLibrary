<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/chatscene_item_padding_left"
    android:paddingRight="@dimen/chatscene_item_padding_left">

    <TextView
        android:id="@+id/tv_time"
        style="@style/chatscene_item_time_textview"
        android:layout_marginTop="@dimen/chatscene_item_time_marginTop"
        android:text="星期三 14:05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="星期三 14:05" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/chatscene_item_avatar_width"
        android:layout_height="@dimen/chatscene_item_avatar_width"
        android:layout_marginTop="@dimen/chatscene_item_avatar_marginTop"
        android:src="@drawable/icon_guess"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />

    <TextView
        android:id="@+id/tv_master"
        style="@style/chatscene_item_master_textview"
        android:layout_marginRight="@dimen/chatscene_item_master_marginLeft"
        android:layout_marginTop="@dimen/chatscene_item_master_marginTop"
        android:text="@string/group_master"
        app:layout_constraintRight_toLeftOf="@id/civ_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        tools:text="@string/group_master" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/chatscene_item_name_textview"
        android:layout_marginRight="@dimen/chatscene_item_name_marginLeft"
        android:layout_marginTop="@dimen/chatscene_item_name_marginTop"
        android:text="天下008"
        app:layout_constraintRight_toLeftOf="@id/tv_master"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_goneMarginRight="@dimen/chatscene_item_name_gonemarginLeft"
        tools:text="天下008" />

    <TextView
        android:id="@+id/tv_action"
        style="@style/chatscene_item_action_textview"
        android:layout_marginRight="@dimen/chatscene_item_action_marginLeft"
        android:layout_marginTop="@dimen/chatscene_item_action_marginTop"
        android:text="参与了模拟记分"
        app:layout_constraintRight_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        tools:text="参与了模拟记分" />

    <TextView
        android:id="@+id/tv_content_bg"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="@dimen/chatscene_item_content_layout_marginTop"
        android:background="@drawable/chatscene_item_bg_from_sel"
        android:layout_height="@dimen/chatscene_item_content_min_height"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/chatscene_item_content_text_min_width"
        android:minHeight="@dimen/chatscene_item_content_min_height"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/civ_avatar" />

    <ImageView
        android:id="@+id/iv_horn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/chatscene_item_horn_margin_bg"
        android:src="@drawable/chatscene_horn_to_sel"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_bg"
        app:layout_constraintRight_toRightOf="@id/tv_content_bg"
        app:layout_constraintTop_toTopOf="@id/tv_content_bg" />

    <TextView
        android:id="@+id/tv_record_time"
        style="@style/chatscene_item_record_time_textview"
        android:layout_marginLeft="@dimen/chatscene_item_record_time_margin_bg"
        android:text="15 '"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_bg"
        app:layout_constraintRight_toLeftOf="@id/tv_content_bg"
        app:layout_constraintTop_toTopOf="@id/tv_content_bg"
        tools:text="15'" />

    <ImageView
        android:id="@+id/iv_unread"
        style="@style/cornerSignView"
        android:layout_marginLeft="@dimen/chatscene_item_unread_margin_bg"
        app:layout_constraintRight_toLeftOf="@id/tv_content_bg"
        app:layout_constraintTop_toTopOf="@id/tv_content_bg" />

    <ImageView
        android:id="@+id/iv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chatscene_item_fail_margin_bg"
        android:clickable="true"
        android:src="@drawable/chatscene_chat_fail_sel"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_bg"
        app:layout_constraintRight_toLeftOf="@id/tv_content_bg"
        app:layout_constraintTop_toTopOf="@id/tv_content_bg" />

    <com.github.jdsjlzx.progressindicator.AVLoadingIndicatorView
        android:id="@+id/progressbar"
        style="@style/chatscene_item_progressbar"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_bg"
        app:layout_constraintRight_toLeftOf="@id/tv_content_bg"
        app:layout_constraintTop_toTopOf="@id/tv_content_bg" />


</android.support.constraint.ConstraintLayout>