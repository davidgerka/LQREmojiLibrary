<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout_pic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <com.bet007.mobile.score.widget.BubbleImageView
        android:id="@+id/biv_content_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/chatscene_item_pic_max_height"
        android:maxWidth="@dimen/chatscene_item_pic_max_width"
        android:minHeight="@dimen/chatscene_item_pic_min_height"
        android:minWidth="@dimen/chatscene_item_pic_min_width"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:bubble_angle="@dimen/chatscene_item_pic_angle"
        app:bubble_arrowHeight="@dimen/chatscene_item_pic_arrow_height"
        app:bubble_arrowLocation="0"
        app:bubble_arrowOffset="@dimen/chatscene_item_pic_arrow_offset"
        app:bubble_arrowTop="@dimen/chatscene_item_pic_arrow_top"
        app:bubble_arrowWidth="@dimen/chatscene_item_pic_arrow_width" />

    <View
        android:id="@+id/view_pic_mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/biv_content_pic"
        android:layout_alignLeft="@id/biv_content_pic"
        android:layout_alignRight="@id/biv_content_pic"
        android:layout_alignTop="@id/biv_content_pic"
        android:background="@color/chatscene_item_pic_mask"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pic_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="?attr_white"
        android:textSize="@dimen/chatscene_item_text_big"
        android:visibility="invisible" />
</RelativeLayout>