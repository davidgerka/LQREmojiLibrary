<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/chatscene_item_padding_left"
    android:paddingLeft="@dimen/chatscene_item_padding_left"
    android:paddingRight="@dimen/chatscene_item_padding_left">

    <TextView
        android:id="@+id/tv_time"
        style="@style/chatscene_item_time_textview"
        android:layout_marginTop="@dimen/chatscene_item_time_marginTop"
        android:text="星期三 14:05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="星期三 14:05" />

    <TextView
        android:id="@+id/tv_tips"
        style="@style/chatscene_item_time_textview"
        android:layout_marginTop="10dp"
        android:text="Anady加入本群"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        tools:text="Anady加入本群" />

</android.support.constraint.ConstraintLayout>